                    <span asp-validation-for="Password"></span>
                </div>
                <div class="card-footer">
                    <input class="btn btn-danger btn-sm" type="submit" value="Login" />
                </div>

                @if (ViewBag.errors != null)
                {
                    <p>@ViewBag.errors</p>
                }

            </form>



        </div>
        <p>
            Not a member?<br />

            <a href="/User/Add" class="btn btn-danger btn-sm">Register</a>
        </p>
    </div>
</div>



